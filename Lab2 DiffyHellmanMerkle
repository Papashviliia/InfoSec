#include <math.h>
#include <iostream>
#include <cstdlib>
using namespace std;




int main() {
	long alice, bob;
	int a, b;
	int g=2;
	int p=21;
	cout << "Hello, Alice" << endl << "Your gand p are 2 and 20" << endl;
	srand(time(0));
	a = rand(); while (a > 21) a /= 10;
	srand(time(0));
	b = rand();	while (b > 21) b /= 10;
	cout << "You randobly randomly generated a: " << a << endl;
	alice = pow(g, a);
	alice %= p;
	cout << "You generated your part of the key: " << alice << endl;
	cout << "You part of the key send to: Bob" << endl;
	bob = pow(g, b);
	bob %= p;
	cout << "You've got a message." << endl <<"Bob sends you his part of the key: " << bob << endl;
	long K = pow(bob, a);
	K %= p;
	cout << "Your key generated with Bob's part and your part is: " << K << endl;
}
